.container
  .row
    .col-sm-12
      %table.table.table-hover
        %tr
          %th Date
          %th Champion
          %th K / D / A
          %th KDA Ratio
        - @stats.each do |stat|
          %tr
            %td
              = stat.timestamp
            %td
              = image_tag(stat.champion_img, class: 'img-thumbnail', style: 'width: 50px; height: 50px;')
            %td
              = "#{stat.player.kills} / #{stat.player.deaths} / #{stat.player.assists}"
            %td
              = stat.player.kda